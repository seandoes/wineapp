<%= link_to "Back to #{@winery.name} details", winery_path(@winery) %>
<h1> <%= @winery.name %> Wines</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
<% @wines.each do |wine| %>
  <tr>
    <td><%= wine.name %></td>
    <td><%= wine.description %></td>
    <td><%= link_to 'Show', [wine.winery, wine] %></td>
    <td><%= link_to 'Edit', edit_winery_wine_path(wine.winery, wine) %></td>
    <td><%= link_to 'Destroy', [wine.winery, wine], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

